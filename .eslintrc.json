{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended",
		"plugin:prettier/recommended"
	],
	"plugins": ["@typescript-eslint", "prettier"],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"prettier/prettier": [
			"error",
			{
				"useTabs": true,
				"tabWidth": 4,
				"semi": true,
				"singleQuote": true,
				"trailingComma": "es5",
				"printWidth": 100
			}
		],
		"no-unused-vars": "off",
		"@typescript-eslint/no-unused-vars": ["warn"]
	}
}
